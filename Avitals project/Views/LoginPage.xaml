<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Avitals_project.Views.LoginPage"
             xmlns:viewmodels="clr-namespace:Avitals_project.ViewModels"
             x:DataType="viewmodels:LoginPageViewModel"
             Title="LoginPage" 
             BackgroundColor="{StaticResource MainColor}">
    <VerticalStackLayout>
        <Label FontSize="Header" Text="Welcome back" FontAttributes="Italic" TextColor="{StaticResource TextColor}"></Label>
        <Label FontSize="Medium" Text="Sign in to your account" FontAttributes="Italic" TextColor="{StaticResource TextColor}"></Label>
        
        <Border 
        <Label Text="Username"></Label>
        <Entry Text="{Binding Username}" ></Entry>
        <Label Text="Password"></Label>
        <Entry Text="{Binding Password}"></Entry>
    </VerticalStackLayout>
</ContentPage>